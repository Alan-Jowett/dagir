{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/dagir.schema.json",
  "title": "DagIR DAG Schema",
  "description": "Schema for representing Directed Acyclic Graphs in DagIR JSON backend",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_-]+$",
            "description": "Unique identifier for the node"
          },
          "label": {
            "type": "string",
            "description": "Human-readable label for the node"
          },
          "attributes": {
            "type": "object",
            "additionalProperties": {
              "type": ["string", "number", "boolean", "null"]
            },
            "description": "Custom metadata for the node"
          }
        },
        "additionalProperties": false
      },
      "uniqueItems": true
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target"],
        "properties": {
          "source": {
            "type": "string",
            "description": "ID of the source node"
          },
          "target": {
            "type": "string",
            "description": "ID of the target node"
          },
          "attributes": {
            "type": "object",
            "additionalProperties": {
              "type": ["string", "number", "boolean", "null"]
            },
            "description": "Custom metadata for the edge"
          }
        },
        "additionalProperties": false
      }
    },
    "roots": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional list of root node IDs"
    },
    "graphAttributes": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean", "null"]
      },
      "description": "Global graph-level metadata"
    }
  },
  "required": ["nodes", "edges"],
  "additionalProperties": false
}
